@model IEnumerable<ClinicAppointmentSystem.Models.ClinicDb>

@{
    ViewData["Title"] = "Appointments";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">📋 Appointment List</h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success px-3">➕ New Appointment</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No appointments found. Click "New Appointment" to add one.
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered shadow">
            <thead class="table-dark">
                <tr>
                    <th>Appointment ID</th>
                    <th>Patient Name</th>
                    <th>Department</th>
                    <th>Appointment Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.appointmentId</td>
                        <td>@item.patientName</td>
                        <td>@item.department</td>
                        <td>@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.appointmentId" class="btn btn-warning btn-sm">✏ Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.appointmentId" class="btn btn-danger btn-sm">🗑 Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
